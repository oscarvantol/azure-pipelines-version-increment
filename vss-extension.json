{
    "manifestVersion": 1,
    "id": "version-increment",
    "name": "Version Increment",
    "version": "0.9.8",
    "publisher": "ovantol",
    "public": true,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tools for working with versions. The version increment task updates a semver and writes it back to the pipeline definition using the azuredevops api.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "icon.png"
    },
    "files": [
        {
            "path": "version-increment-task"
        }
    ],
    "content": {
        "details": {
          "path": "overview.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/oscarvantol/azure-pipelines-version-increment"
        },
        "repository": {
            "type": "git",
            "uri": "https://github.com/oscarvantol/azure-pipelines-version-increment"
        }
    },
    "contributions": [
        {
            "id": "custom-build-release-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "version-increment-task"
            }
        }
    ]
}